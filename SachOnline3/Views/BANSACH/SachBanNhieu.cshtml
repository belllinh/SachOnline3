@model IEnumerable<SachOnline3.Models.SACH>

<h2 class="text-center">SÁCH BÁN NHIỀU</h2>

<div class="row justify-content-center">
    @foreach (var sach in Model)
    {
        <div class="col-6">
            <div class="row">
               
                    <div class="col-2">
                        <img src="~/Image/@sach.Anhbia" class="img-thumbnail" alt="Thumbnail Image 1">
                    </div>
                    <div class="col-9">
                        <div class="caption">
                            <h6>@sach.Tensach</h6>
                            <p>@sach.Mota </p>
                        </div>
                    </div>

            </div>

        </div>
     }
 </div>
                


